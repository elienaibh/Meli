{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": [
          "api/requirements.txt"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/webhook/mercadolivre",
      "dest": "api/index.py"
    },
    {
      "src": "/auth/callback",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "PYTHONUNBUFFERED": "1"
  }
} 